<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- wizard action on res.partner -->
        <act_window id="event_registration_bulk_confirmation_action"
            name="Set to Confirmed"
            src_model="event.registration"
            res_model="event.registration.bulk.confirmation"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"/>

        <!-- wizard view -->
        <record id="event_registration_bulk_confirmation_wizard_view" model="ir.ui.view">
            <field name="name">Bulk Confirmation</field>
            <field name="model">event.registration.bulk.confirmation</field>
            <field name="arch" type="xml">
                <form string="Confirmation">
                    <group>
                        
                    </group>
                    <div>
                        Confirm selected registration(s) and send sheduled e-mail(s) ?
                    </div>
                    <footer>
                        <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
</odoo>
