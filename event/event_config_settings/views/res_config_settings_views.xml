<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_tags" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.event</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="65" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='event']" position="inside">
                <h2>Eezee-It Platinum (EPL)</h2>

                <h3>Events</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_event_mass_registration" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_event_mass_registration" />
                            <div class="text-muted">
                                Use the mass pre-registration to import contacts as attendees
                            </div>
                        </div>
                    </div>
                </div>

                <h3>Registration</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_event_registration_tags" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_event_registration_tags" />
                            <div class="text-muted">
                                Activate tags on attendees
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_public_confirmation" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_public_confirmation" />
                            <div class="text-muted">
                                Allow attendees to confirm or refused registration by the website
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_event_registration_mail_filter" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_event_registration_mail_filter" />
                            <div class="text-muted">
                                Add attendees filter on Email Schedule
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_registration_code" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_registration_code" />
                            <div class="text-muted">
                                Allow attendees to confirm their registrations by a code (require "Public confirmation")
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_event_registration_note" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_event_registration_note" />
                            <div class="text-muted">
                                Add an internal note field
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_create_contact" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_create_contact" />
                            <div class="text-muted">
                                Add create new contact
                            </div>
                        </div>
                    </div>
                    
                </div>
                <h3>Website</h3>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_multi_event" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_multi_event" />
                            <div class="text-muted">
                                Activate multi events
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_deadline" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_deadline" />
                            <div class="text-muted">
                                Registration deadline
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_images" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_images" />
                            <div class="text-muted">
                                Add images on event
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_details" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_details" />
                            <div class="text-muted">
                                Add extra informations on event
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_programs" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_programs" />
                            <div class="text-muted">
                                Add programs on event
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_list_publication" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_list_publication" />
                            <div class="text-muted">
                                Add an option to hide/display event on events page list
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_event_registration_note" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_event_registration_note" />
                            <div class="text-muted">
                                Add an internal note field
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_event_email_details" widget="upgrade_boolean" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_event_email_details" />
                            <div class="text-muted">
                                Add extra informations email on event
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
