<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- wizard action on res.partner -->
        <act_window id="event_registration_categorisation_wizard_action"
            name="Categorize"
            src_model="event.registration"
            res_model="event.registration.categorize"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"/>

        <!-- wizard view -->
        <record id="event_registration_categorisation_wizard_view" model="ir.ui.view">
            <field name="name">Categorize</field>
            <field name="model">event.registration.categorize</field>
            <field name="arch" type="xml">
                <form string="Categorize">
                    <group>
                        <field name="category_ids" widget="many2many_tags" />
                        <field name="should_reset_status_to_confirm"/>
                        
                    </group>
                    <div>
                        "Reset status to confirm" don't send scheduled emails
                    </div>
                    <footer>
                        <button string="Apply" name="action_apply" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
</odoo>
